<%- include('./components/header') %>
<div class="card bg-base-200 shadow-lg rounded-lg p-6">
    <h1 class="text-4xl font-bold mb-4"><%= blog.title %></h1>
    <p class="text-sm text-gray-500 mb-6">
        Posted on <span class="font-medium"><%= blog.createdAt.toLocaleDateString() %></span>
    </p>
    <div class="prose lg:prose-xl max-w-none flex-grow min-h-[35vh]">
        <%- blog.sanitizedMarkdownHtml %>
    </div>
    <div class="mt-8 flex gap-4">
        <a href="/blog/edit/<%= blog.id%> " class="btn btn-primary rounded-lg">Edit</a>
        <form action="/blog/<%= blog.id%>?_request_method=DELETE" method="post">
            <button type="submit" class="btn btn-error rounded-lg">
                Delete
            </button>
        </form>
    </div>
    <div class="mt-8">
        <a href="/blog" class="btn btn-neutral rounded-lg">Back to Blogs</a>
    </div>
</div>

<%- include('./components/footer') %>
